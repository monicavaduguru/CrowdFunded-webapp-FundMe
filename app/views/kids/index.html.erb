<html>

<head> 
	<%= stylesheet_link_tag "style.css" %>
<title> First App in ROR 
	
</title>
</head>

<body style="background-color: black">
	
	<div id="imagecontainer" style="height: 450px">
		<div id="header">
			<div class="container"> 
				
				<!-- Logo -->
				<div id="logo">
					<h2>FundMe</h2>
					<span>Donate and make life better</span>
				</div>
	</div>
</div>

</div>
<div align="center" style="color: white">
	<div align="center"><% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %></div>
	<h1>Listing kids</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Purpose</th>
      <th>Money required</th>
      <th>Comments</th>
      <th>Image url</th>
      <th>Address</th>
      <th>Money received</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @kids.each do |kid| %>
      <tr>
        <td><%= kid.name %></td>
        <td><%= kid.age %></td>
        <td><%= kid.purpose %></td>
        <td><%= kid.money_required %></td>
        <td><%= kid.comments %></td>
        <td><%= kid.image_url %></td>
        <td><%= kid.address %></td>
        <td><%= kid.money_received %></td>
        <td><%= link_to 'Show', kid %></td>
        <td><%= link_to 'Edit', edit_kid_path(kid) %></td>
        <td><%= link_to 'Destroy', kid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p style="color: grey"><%= link_to 'New Kid', new_kid_path %></p>

</div>
</body>
</html>
